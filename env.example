# LINE Bot 設定
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# 管理員設定
LINE_USER_ID=your_line_user_id_here  # 單一管理員（向後相容）

# 多管理員設定（選填）
# 支援多個管理員 User ID（逗號分隔）
# ADMIN_USER_IDS=Udb51363eb6fdc605a6a9816379a38103,U1234567890abcdef,U0987654321fedcba
# 是否啟用多管理員模式（預設：true）
# ENABLE_MULTI_ADMINS=true
# 管理員設定檔路徑（預設：src/data/admin-users.json）
# ADMIN_CONFIG_FILE=src/data/admin-users.json

# Google Sheets 設定
GOOGLE_SHEETS_API=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
GOOGLE_SHEETS_COOKIE=your_google_sheets_cookie_here

# 伺服器設定
PORT=3010
NODE_ENV=production
TZ=Asia/Taipei

# Webhook 轉發設定（選填）
# 將 LINE webhook 轉發到其他服務
# 格式：JSON 陣列，每個目標包含 name, url, enabled 等欄位
# WEBHOOK_FORWARD_TARGETS='[{"name":"課程服務","url":"https://course.example.com/webhook","enabled":true}]'
# WEBHOOK_FORWARD_LOG=true

# 管理員通知設定（選填）
# 用於接收學生請假通知的群組 ID
# ADMIN_GROUP_ID=your_admin_group_id_here

# 匯款通知設定（選填）
# 用於接收匯款確認通知的群組 ID（通常為正職群組）
# REMITTANCE_GROUP_ID=your_remittance_group_id_here
# 匯款確認按鈕的 action 標識
# REMITTANCE_CONFIRM_ACTION=remittance_confirm
# 匯款關鍵字（逗號分隔）
# REMITTANCE_KEYWORDS=匯款,轉帳,轉帳完成,已轉,ATM
# Flex Message 主題色（LINE Pay 風格綠色）
# REMITTANCE_THEME_COLOR=#00C300

# ============================================
# 使用說明
# ============================================
# 1. 複製此檔案為 .env
#    cp env.example .env
#
# 2. 填入實際的設定值
#
# 3. 確認 .env 已加入 .gitignore
#    不要將實際的 .env 提交到 Git！
# ============================================

# 訊息中心（Message Center）設定
# 用於 /api/message 安全驗證與預設參數
ADMIN_API_KEY=please-change-me
MESSAGE_RATE_LIMIT_PER_SEC=8
MESSAGE_BATCH_SIZE=20
MESSAGE_MAX_RETRIES=2
MESSAGE_DEFAULT_BOT_STRATEGY=primary_first

#（可選）Broadcast / Narrowcast 開關與 IP 白名單
ENABLE_BROADCAST=false
ADMIN_IP_ALLOWLIST=
